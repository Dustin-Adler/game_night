= form_for(group) do |f|
  - if group.errors.any?
    #error_explanation
      %h2
        = pluralize(group.errors.count, "error")
        prohibited this group from being saved:
      %ul
        - group.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :group_name, class: "h5 strong"
    = f.text_field :group_name, class: "form-control"
  .field
    = f.label :description, class: "h5 strong"
    = f.text_area :description, class: "form-control"
  .actions
    = f.submit class: "btn btn-primary mt-4"
