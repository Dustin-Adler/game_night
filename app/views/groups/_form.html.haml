= form_for(group) do |f|
  - if group.errors.any?
    #error_explanation
      %h2
        = pluralize(group.errors.count, "error")
        prohibited this group from being saved:
      %ul
        - group.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :admin_id
    = f.number_field :admin_id
  .field
    = f.label :group_name
    = f.text_field :group_name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit
