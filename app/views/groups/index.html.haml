%p#notice= notice
%h1 Groups
%table
  %thead
    %tr
      %th Admin
      %th Group name
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @groups.each do |group|
      %tr
        %td= group.admin_id
        %td= group.group_name
        %td= group.description
        %td= link_to 'Show', group
        %td= link_to 'Edit', edit_group_path(group)
        %td= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Group', new_group_path
