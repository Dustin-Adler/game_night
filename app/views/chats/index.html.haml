%p#notice= notice
%h1 Chats
%table
  %thead
    %tr
      %th Event
      %th Author
      %th Comment
      %th{:colspan => "3"}
  %tbody
    - @chats.each do |chat|
      %tr
        %td= chat.event_id
        %td= chat.author_id
        %td= chat.comment
        %td= link_to 'Show', chat
        %td= link_to 'Edit', edit_chat_path(chat)
        %td= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Chat', new_chat_path
