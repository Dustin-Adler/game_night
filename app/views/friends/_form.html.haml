= form_for(friend) do |f|
  - if friend.errors.any?
    #error_explanation
      %h2
        = pluralize(friend.errors.count, "error")
        prohibited this friend from being saved:
      %ul
        - friend.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :friend_1_id
    = f.number_field :friend_1_id
  .field
    = f.label :friend_2_id
    = f.number_field :friend_2_id
  .field
    = f.label :pending
    = f.check_box :pending
  .actions
    = f.submit
