%p#notice= notice
%h1 Friends
%table
  %thead
    %tr
      %th Friend 1
      %th Friend 2
      %th Pending
      %th{:colspan => "3"}
  %tbody
    - @friends.each do |friend|
      %tr
        %td= friend.friend_1_id
        %td= friend.friend_2_id
        %td= friend.pending
        %td= link_to 'Show', friend
        %td= link_to 'Edit', edit_friend_path(friend)
        %td= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Friend', new_friend_path
