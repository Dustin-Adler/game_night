= form_for(event) do |f|
  - if event.errors.any?
    #error_explanation
      %h2
        = pluralize(event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - event.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :group_id
    = f.number_field :group_id
  .field
    = f.label :game_id
    = f.number_field :game_id
  .field
    = f.label :required_players
    = f.number_field :required_players
  .field
    = f.label :details
    = f.text_area :details
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit
