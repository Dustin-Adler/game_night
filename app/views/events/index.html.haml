%h1 Events
%table
  %thead
    %tr
      %th Group
      %th Game
      %th Required players
      %th Details
      %th Date
      %th{:colspan => "3"}
  %tbody
    - @events.each do |event|
      %tr
        %td= event.group.group_name
        %td= event.game.game_name
        %td= event.required_players
        %td= event.details
        %td= event.date
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }
