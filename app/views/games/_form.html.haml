= form_for(game) do |f|
  - if game.errors.any?
    #error_explanation
      %h2
        = pluralize(game.errors.count, "error")
        prohibited this game from being saved:
      %ul
        - game.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :game_name
    = f.text_field :game_name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :video_game
    = f.check_box :video_game
  .field
    = f.label :genre
    = f.text_field :genre
  .actions
    = f.submit
